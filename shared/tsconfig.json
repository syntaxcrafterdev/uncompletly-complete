{
  "compilerOptions": {
  "target": "es2018",
  "module": "commonjs",
  "declaration": true,
  "outDir": "./dist",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
